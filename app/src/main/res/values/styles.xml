<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1A2A6C</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Set toolbar text color to white -->
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="defaultToolbarTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="popupMenuBackground">@drawable/item_background_menu</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@null</item>
    </style>

</resources>